  <div class="mx-auto w-full max-w-7xl px-4 py-16">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-12 mb-12">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="flex items-center mb-6">
          <Image src={whiteHorizontalLogo} alt="Capital M logo white" width={120} class='h-10'/>
