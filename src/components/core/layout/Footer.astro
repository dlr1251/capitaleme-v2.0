---
import { Image } from 'astro:assets';
import whiteHorizontalLogo from '../../../assets/logo/white-horizontal.svg'

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;

// Define content based on language
const content = lang === 'es' ? {
  tagline: "Organizamos tus asuntos legales en Colombia. Servicios legales expertos para visas, bienes raíces y soluciones empresariales.",
  quickLinks: "Enlaces Rápidos",
  bookAppointment: "Reservar Cita",
  privacyPolicy: "Política de Privacidad",
  termsConditions: "Términos y Condiciones",
  contactUs: "Contáctanos",
  allRightsReserved: "Todos los Derechos Reservados.",
  madeWithLove: "Hecho con ❤️ en Colombia"
} : {
  tagline: "We organize your legal stuff in Colombia. Expert legal services for visas, real estate, and business solutions.",
  quickLinks: "Quick Links",
  bookAppointment: "Book an Appointment",
  privacyPolicy: "Privacy Policy",
  termsConditions: "Terms & Conditions",
  contactUs: "Contact Us",
  allRightsReserved: "All Rights Reserved.",
  madeWithLove: "Made with ❤️ in Colombia"
};
