---
import ContactForm from "../../ui/forms/ContactForm.tsx"

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;

// Define content based on language
const content = lang === 'es' ? {
  title: "GESTIONAMOS TUS NECESIDADES LEGALES",
  subtitle: "EN COLOMBIA",
  description: "Una boutique legal con sede en Medellín, Colombia. Somos abogados colombianos - abogados -. Entendemos la cultura, el idioma y las prácticas comunes del sistema legal colombiano.",
  services: [
    "Servicios de Visas e Inmigración",
    "Constitución de Empresas",
    "Acuerdos Inmobiliarios"
  ]
} : {
  title: "WE MANAGE YOUR LEGAL NEEDS",
  subtitle: "IN COLOMBIA",
  description: "A legal boutique based in Medellín, Colombia. We are Colombian attorneys - abogados -. We understand the culture, language and common practices of the Colombian legal system.",
  services: [
    "Visas & Immigration Services",
    "Business Incorporations",
    "Real Estate Agreements"
  ]
};
---

<section class="flex flex-col md:flex-row justify-center items-center max-w-screen-xl mx-auto py-6">
            <div class="w-full h-full p-2 md:p-0 md:w-2/3">
              <div class="text-4xl md:text-3xl font-bold text-primary mb-8 flex flex-col justify-between">
                <span class="mb-1.5">{content.title}</span>
                <span class="mb-1.5">{content.subtitle}</span>
              </div>
              <div class="mb-5 text-lg md:text-xl text-primary text-light">
                {content.description}
              </div>
              <ul>
                {content.services.map((service, index) => (
                  <li class="mb-3 text-lg md:text-xl text-primary flex">
                    <a href="/services" class="flex group">
                      <svg class="w-6 h-6 text-secondary mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                        <path fill-rule="evenodd" d="M2 12a10 10 0 1 1 20 0 10 10 0 0 1-20 0Zm13.7-1.3a1 1 0 0 0-1.4-1.4L11 12.6l-1.8-1.8a1 1 0 0 0-1.4 1.4l2.5 2.5c.4.4 1 .4 1.4 0l4-4Z" clip-rule="evenodd"/>
                      </svg>
                      <span class="group-hover:text-secondary group-hover:underline">
                        {service}
                      </span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
            <div class="w-full sm:w-3/4 md:w-1/3 mr-auto p-2 md:p-0 flex flex-col ">
        
                              <ContactForm lang={lang} client:load />
            </div>                   
          </div>
</section>