---
interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;

const content = lang === 'es' ? {
  title: "Bienes Ra√≠ces en Colombia",
  subtitle: "Servicios legales inmobiliarios expertos",
  description: "Te ayudamos a navegar el mercado inmobiliario colombiano con servicios legales especializados. Desde compra y venta hasta inversiones y desarrollo de proyectos.",
  ctaPrimary: "Consulta Gratuita",
  ctaSecondary: "Ver Propiedades",
  features: [
    "Asesor√≠a legal especializada",
    "Gesti√≥n de transacciones",
    "Due diligence completo",
    "Soporte post-venta"
  ]
} : {
  title: "Real Estate in Colombia",
  subtitle: "Expert Real Estate Legal Services",
  description: "We help you navigate the Colombian real estate market with specialized legal services. From buying and selling to investments and project development.",
  ctaPrimary: "Free Consultation",
  ctaSecondary: "View Properties",
  features: [
    "Specialized legal advice",
    "Transaction management",
    "Complete due diligence",
    "Post-sale support"
  ]
};
---

<section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 text-white overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23ffffff%22 fill-opacity=%220.1%22%3E%3Ccircle cx=%2230%22 cy=%2230%22 r=%222%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <div class="space-y-4">
          <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
            {content.title}
          </h1>
          <p class="text-xl lg:text-2xl text-blue-100 leading-relaxed">
            {content.subtitle}
          </p>
          <p class="text-lg text-blue-200 leading-relaxed">
            {content.description}
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href={lang === 'es' ? '/es/contact' : '/en/contact'}
            class="bg-white text-blue-900 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-blue-50 transition-colors duration-300 text-center"
          >
            {content.ctaPrimary}
          </a>
          <a 
            href={lang === 'es' ? '/es/real-estate/properties' : '/en/real-estate/properties'}
            class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-blue-900 transition-colors duration-300 text-center"
          >
            {content.ctaSecondary}
          </a>
        </div>

        <!-- Features -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 pt-8">
          {content.features.map((feature) => (
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 bg-green-400 rounded-full"></div>
              <span class="text-blue-100">{feature}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Visual Element -->
      <div class="relative">
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
          <div class="text-center space-y-4">
            <div class="text-6xl mb-4">üè†</div>
            <h3 class="text-2xl font-semibold">
              {lang === 'es' ? 'Servicios Inmobiliarios' : 'Real Estate Services'}
            </h3>
            <div class="space-y-3 text-left">
              <div class="flex items-center space-x-3">
                <span class="text-green-400">‚úì</span>
                <span>{lang === 'es' ? 'Compra y Venta' : 'Buy & Sell'}</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="text-green-400">‚úì</span>
                <span>{lang === 'es' ? 'Inversiones' : 'Investments'}</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="text-green-400">‚úì</span>
                <span>{lang === 'es' ? 'Desarrollo de Proyectos' : 'Project Development'}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 