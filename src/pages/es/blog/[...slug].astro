import { getBlogPostsFromSupabase, getBlogPostBySlug } from '../../../lib/blogData.ts';
import SocialSharing from '../../../components/core/common/SocialSharing.jsx';

interface Props {
  post: {
    id: string;
    title: string;
    slug: string;
    description: string;
    content: string;
    category: string;
    image?: string;
    lang: string;
    published: boolean;
    featured: boolean;
    author: string;
