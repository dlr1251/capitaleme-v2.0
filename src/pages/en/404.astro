---
import Layout from '../../layouts/Layout.astro';
import { getAllContentData } from '../../server/lib/contentData.js';
const lang = 'en';
const menuData = await getAllContentData(lang);
---
<Layout title='404 - Page not found' lang={lang} menuData={menuData}>
<section class="h-screen flex flex-col justify-center items-center">
    <h1 class="text-4xl">404 page not found</h1>
    <h2 class="text-primary text-xl mb-5">Oops! What used to be here is not  here anymore...</h2>
    <a  class="bg-secondary text-white py-2 px-5 shadow rounded" href="/">Go back</a>
</section>
</Layout>