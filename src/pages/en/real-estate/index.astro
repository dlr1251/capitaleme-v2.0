<Layout title="Real Estate - Capital M Law" description="Colombian real estate legal services, guides, and property support." menuData={menuData} lang={lang}>
  <RealEstateHero />
  <Calculator />
  <SellerFeatures />
  <ServicesGrid />
  <RealEstateGuide />
  <CLKRRepository />
  <GoogleReviews />
  <ConsultationSection lang="en" />
</Layout>

