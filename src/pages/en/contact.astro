---
import Layout from '../../layouts/Layout.astro';
import YouTubeChannelSection from '../../components/contact/YouTubeChannelSection.astro';
import { getAllContentData } from '../../server/lib/contentData.js';
import { UserIcon, EnvelopeIcon, DevicePhoneMobileIcon, BriefcaseIcon, ChatBubbleLeftRightIcon, PaperAirplaneIcon, InformationCircleIcon, MapPinIcon, ChatBubbleOvalLeftEllipsisIcon, CalendarIcon, GlobeAltIcon } from '@heroicons/react/24/outline';
const lang = 'en';
const menuData = await getAllContentData(lang);
---

<Layout title="Contact - Capital M Law" menuData={menuData}>
  <div class="min-h-screen bg-primary-50">
    <!-- Hero Section -->
    <div class="relative overflow-hidden mb-4">      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-16">
        <div class="text-center">          
          <h1 class="text-4xl md:text-5xl font-bold text-primary mb-6">
            Let's talk about your case
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Our team of legal experts is ready to help you. 
            Tell us about your situation and we'll respond within 24 hours.
          </p>  
          <div class="max-w-xl mx-auto mb-4">
            <div class="bg-blue-100 border border-blue-300 text-blue-800 rounded-lg px-4 py-3 text-base font-medium">
              Please note: Our primary contact methods are <span class="font-semibold">email</span>, <span class="font-semibold">WhatsApp</span>, and <span class="font-semibold">Calendly</span>. We do not accept direct phone calls.
            </div>
          </div>
         
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Contact Information -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-6 sticky top-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
              <InformationCircleIcon className="w-6 h-6 text-primary mr-3" aria-hidden="true" />
              Contact information
            </h2>
            <!-- Contact Methods -->
            <div class="space-y-4">
              <!-- Email -->
              <div class="flex items-start space-x-3 p-3 bg-primary-50 rounded-lg hover:bg-primary-100 transition-colors">
                <div class="flex-shrink-0 w-10 h-10 bg-primary rounded-md flex items-center justify-center">
                  <EnvelopeIcon className="w-6 h-6 text-white" aria-hidden="true" />
                </div>
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 mb-0.5">Email</h3>
                  <a href="mailto:info@capitaleme.com" class="text-primary hover:underline">
                    info@capitaleme.com
                  </a>
                </div>
              </div>
              <!-- WhatsApp -->
              <div class="flex items-start space-x-3 p-3 bg-secondary-50 rounded-lg hover:bg-secondary-100 transition-colors">
                <div class="flex-shrink-0 w-10 h-10 bg-secondary rounded-md flex items-center justify-center">
                  <ChatBubbleOvalLeftEllipsisIcon className="w-6 h-6 text-white" aria-hidden="true" />
                </div>
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 mb-0.5">WhatsApp</h3>
                  <a href="https://wa.me/573146022411" target="_blank" class="text-secondary hover:underline">
                    +57 314 602 2411
                  </a>
                  <p class="text-xs text-gray-500 mt-0.5">Instant response</p>
                </div>
              </div>
              <!-- Calendly -->
              <div class="flex items-start space-x-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="flex-shrink-0 w-10 h-10 bg-gray-400 rounded-md flex items-center justify-center">
                  <CalendarIcon className="w-6 h-6 text-white" aria-hidden="true" />
                </div>
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 mb-0.5">Calendly</h3>
                  <a href="https://calendly.com/capitaleme" target="_blank" class="text-gray-700 hover:underline">
                    Book a meeting
                  </a>
                  <p class="text-xs text-gray-500 mt-0.5">Schedule a call or video meeting</p>
                </div>
              </div>
              <!-- Address -->
              <div class="flex items-start space-x-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="flex-shrink-0 w-10 h-10 bg-gray-400 rounded-md flex items-center justify-center">
                  <MapPinIcon className="w-6 h-6 text-white" aria-hidden="true" />
                </div>
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 mb-0.5">Main Office</h3>
                  <address class="text-gray-700 not-italic text-sm">
                    <a href="https://www.google.com/maps/place/Transversal+39B+%2373-23,+Laureles,+Medell%C3%ADn,+Antioquia,+Colombia" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">
                      Transversal 39B #73-23<br>
                      Inspira Coworking<br>
                      Laureles - Medellín - Colombia
                    </a>
                  </address>
                  <p class="text-xs text-gray-500 mt-0.5">Appointment required</p>
                </div>
              </div>
            </div>
            <!-- Social Media -->
            <div class="mt-6 pt-6 border-t border-gray-200">
              <h3 class="font-semibold text-gray-900 mb-3 flex items-center">
                <GlobeAltIcon className="w-5 h-5 text-primary mr-2" aria-hidden="true" />
                Follow us
              </h3>
              <div class="flex space-x-3">
                <!-- Instagram -->
                <a href="https://instagram.com/capitalemelaw" target="_blank" aria-label="Instagram" class="w-9 h-9 bg-gray-100 rounded-md flex items-center justify-center hover:bg-primary-100 transition-colors">
                  <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="2" y="2" width="20" height="20" rx="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.5" y2="6.5"/></svg>
                </a>
                <!-- Facebook -->
                <a href="https://facebook.com/capitalemelaw" target="_blank" aria-label="Facebook" class="w-9 h-9 bg-gray-100 rounded-md flex items-center justify-center hover:bg-primary-100 transition-colors">
                  <svg class="w-5 h-5 text-gray-700" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12a10 10 0 1 0-11.5 9.95v-7.05h-2.1V12h2.1v-1.6c0-2.07 1.23-3.22 3.12-3.22.9 0 1.84.16 1.84.16v2.02h-1.04c-1.03 0-1.35.64-1.35 1.3V12h2.3l-.37 2.9h-1.93v7.05A10 10 0 0 0 22 12"/></svg>
                </a>
                <!-- TikTok -->
                <a href="https://tiktok.com/@capitalemelaw" target="_blank" aria-label="TikTok" class="w-9 h-9 bg-gray-100 rounded-md flex items-center justify-center hover:bg-secondary-100 transition-colors">
                  <svg class="w-5 h-5 text-gray-700" fill="currentColor" viewBox="0 0 24 24"><path d="M12.75 2v12.19a2.06 2.06 0 1 1-2.06-2.06c.11 0 .22.01.33.03V9.7a5.06 5.06 0 1 0 5.06 5.06V7.5c.44.32.93.59 1.47.77V9.7a7.53 7.53 0 0 1-2.47-.41V2h-2.33z"/></svg>
                </a>
                <!-- YouTube -->
                <a href="https://youtube.com/@capitalemelaw" target="_blank" aria-label="YouTube" class="w-9 h-9 bg-gray-100 rounded-md flex items-center justify-center hover:bg-secondary-100 transition-colors">
                  <svg class="w-5 h-5 text-gray-700" fill="currentColor" viewBox="0 0 24 24"><path d="M21.8 8.001a2.75 2.75 0 0 0-1.94-1.94C18.2 6 12 6 12 6s-6.2 0-7.86.06a2.75 2.75 0 0 0-1.94 1.94A28.6 28.6 0 0 0 2 12a28.6 28.6 0 0 0 .2 3.999 2.75 2.75 0 0 0 1.94 1.94C5.8 18 12 18 12 18s6.2 0 7.86-.06a2.75 2.75 0 0 0 1.94-1.94A28.6 28.6 0 0 0 22 12a28.6 28.6 0 0 0-.2-3.999zM10 15V9l6 3-6 3z"/></svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
            <div class="text-center mb-8">
              <h2 class="text-3xl font-bold text-gray-900 mb-4">
                Send us your inquiry
              </h2>
              <p class="text-gray-600 max-w-2xl mx-auto">
                Complete the form and our team will get in touch with you 
                to discuss your case and find the best legal solution.
              </p>
            </div>

            <!-- Enhanced Contact Form -->
            <form class="space-y-6" action="https://formcarry.com/s/oe6f89XVhFy" method="post" enctype="multipart/form-data">
              <!-- Name and Email Row -->
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
                    <UserIcon className="w-5 h-5 text-primary mr-2" />
                    Full Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all text-gray-900 placeholder:text-gray-400"
                    placeholder="Your full name"
                    onfocus="this.placeholder=''"
                    onblur="this.placeholder='Your full name'"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
                    <EnvelopeIcon className="w-5 h-5 text-primary mr-2" />
                    Email Address *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all text-gray-900 placeholder:text-gray-400"
                    placeholder="your@email.com"
                    onfocus="this.placeholder=''"
                    onblur="this.placeholder='your@email.com'"
                  />
                </div>
              </div>

              <!-- Phone and Service Row -->
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
                    <DevicePhoneMobileIcon className="w-5 h-5 text-primary mr-2" />
                    Phone Number
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all text-gray-900 placeholder:text-gray-400"
                    placeholder="+1 555 123 4567"
                    onfocus="this.placeholder=''"
                    onblur="this.placeholder='+1 555 123 4567'"
                  />
                </div>
                <div>
                  <label for="service" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
                    <BriefcaseIcon className="w-5 h-5 text-primary mr-2" />
                    Service of Interest
                  </label>
                  <select
                    id="service"
                    name="service"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all text-gray-900"
                  >
                    <option value="">Select a service</option>
                    <option value="Visas">Visas & Immigration</option>
                    <option value="Real Estate">Real Estate</option>
                    <option value="Legal Procedures">Legal Procedures</option>
                    <option value="Legal Consultation">Legal Consultation</option>
                    <option value="Apostille">Apostille</option>
                    <option value="Other">Other</option>
                  </select>
                </div>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
                  <ChatBubbleLeftRightIcon className="w-5 h-5 text-primary mr-2" />
                  Your Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none text-gray-900 placeholder:text-gray-400"
                  placeholder="Tell us about your specific situation, needs, and any relevant details that will help us better prepare for your consultation..."
                  onfocus="this.placeholder=''"
                  onblur="this.placeholder='Tell us about your specific situation, needs, and any relevant details that will help us better prepare for your consultation...'"
                ></textarea>
              </div>

              <!-- Terms and Submit -->
              <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                <div class="flex items-start">
                  <input
                    id="accept_terms"
                    name="accept_terms"
                    type="checkbox"
                    required
                    class="mt-1 h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded"
                  />
                  <label for="accept_terms" class="ml-3 text-sm text-gray-700">
                    I have read and accept the{' '}
                    <a href="/en/terms" target="_blank" class="text-primary hover:text-primary/80 underline">
                      Terms & Conditions
                    </a>{' '}
                    and{' '}
                    <a href="/en/privacy" target="_blank" class="text-primary hover:text-primary/80 underline">
                      Privacy Policy
                    </a>
                    *
                  </label>
                </div>
                <button
                  type="submit"
                  class="w-full sm:w-auto px-8 py-3 bg-secondary text-white font-semibold rounded-lg hover:bg-secondary/90 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center"
                >
                  <PaperAirplaneIcon className="w-5 h-5 text-primary mr-2" />
                  Send Message
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Prominent Google Map below main grid -->
    <div class="max-w-4xl mx-auto mt-12">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
        <MapPinIcon className="w-6 h-6 text-primary mr-2" aria-hidden="true" />
        Find us on the map
      </h2>
      <div class="rounded-2xl shadow-xl overflow-hidden border border-gray-100">
        <iframe
          title="Capital M Law Office Map"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3976.803393178563!2d-75.6011776852386!3d6.257222995471998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e4429a7e2e2b6e1%3A0x7e2e2b6e1e2e2b6e!2sTransversal%2039B%20%2373-23%2C%20Laureles%2C%20Medell%C3%ADn%2C%20Antioquia%2C%20Colombia!5e0!3m2!1sen!2sco!4v1680000000000!5m2!1sen!2sco"
          width="100%"
          height="350"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="w-full h-64 md:h-80"
        ></iframe>
      </div>
    </div>

    <!-- YouTube Section -->
    <YouTubeChannelSection lang="en" />
  </div>
</Layout>

<style>
  /* Custom animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }

  /* Smooth transitions */
  * {
    transition: all 0.2s ease-in-out;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f5f9;
  }

  ::-webkit-scrollbar-thumb {
    background: #3b82f6;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #2563eb;
  }
</style>

<script>
  // Add smooth animations on scroll
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-fade-in-up');
        }
      });
    }, observerOptions);

    // Observe all sections
    document.querySelectorAll('section, .bg-white').forEach(el => {
      observer.observe(el);
    });

    // Form enhancement
    const form = document.querySelector('form');
    if (form) {
      form.addEventListener('submit', (e) => {
        const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
        if (submitBtn) {
          submitBtn.innerHTML = '<span class="mr-2">⏳</span>Sending...';
          submitBtn.disabled = true;
        }
      });
    }
  });
</script>