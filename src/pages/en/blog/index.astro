---
import Layout from "../../../layouts/Layout.astro";
import { getAllContentData } from '../../../server/lib/contentData.js';
import { getBlogPostsFromSupabase, getFeaturedBlogPosts, getBlogCategories, getRelativeTime, formatDate, getCategoryStyling, generateGradient } from '../../../lib/blogData.ts';
import BlogHero from '../../../components/blog/BlogHero.tsx';
import BlogCard from '../../../components/blog/BlogCard.tsx';
import ModernBlogHero from '../../../components/blog/ModernBlogHero.tsx';
import InteractiveBlogGrid from '../../../components/blog/InteractiveBlogGrid.tsx';
import BlogNewsletter from '../../../components/blog/BlogNewsletter.tsx';
import BlogStats from '../../../components/blog/BlogStats.tsx';

const lang = 'en';
const menuData = await getAllContentData('en');

// Fetch blog data from Supabase
let allPosts: any[] = [];
let featuredPosts: any[] = [];
let categories: string[] = [];
let error: string | null = null;

try {
  const [postsData, featuredData, categoriesData] = await Promise.all([
    getBlogPostsFromSupabase(lang, { limit: 50 }),
    getFeaturedBlogPosts(lang, 3),
    getBlogCategories(lang)
  ]);
  
  allPosts = postsData || [];
  featuredPosts = featuredData || [];
  categories = (categoriesData || []).map((cat: any) => String(cat));
} catch (err) {
  console.error('Error fetching blog data:', err);
  error = 'Failed to load blog posts';
}

// Sort posts by publication date (newest first)
allPosts.sort((a: any, b: any) => new Date(b.pub_date).getTime() - new Date(a.pub_date).getTime());

const textContent = {
  en: {
    heroTitle: 'Our Blog',
    heroSubtitle: 'Insights, updates, and stories from our team',
    heroDescription: 'Discover the latest in immigration, business, and life in Colombia. Expert insights, practical advice, and real stories from our legal team.',
    featuredArticles: 'Featured Articles',
    featuredDescription: 'Our latest and most important stories',
    allArticles: 'All Articles',
    allArticlesDescription: 'Browse all our articles and insights',
    noArticles: 'No articles found.',
    addCoverImages: 'Add Cover Images',
    noPosts: 'No posts available',
    loading: 'Loading posts...',
    error: 'Error loading posts',
    newsletterTitle: 'Stay Updated',
    newsletterDescription: 'Get the latest legal insights and updates delivered to your inbox.',
    newsletterPlaceholder: 'Enter your email',
    newsletterButton: 'Subscribe',
    statsTitle: 'Our Content',
    statsDescription: 'Discover our comprehensive collection of legal insights and resources'
  },
  es: {
    heroTitle: 'Nuestro Blog',
    heroSubtitle: 'Perspectivas, actualizaciones e historias de nuestro equipo',
    heroDescription: 'Descubre lo último en inmigración, negocios y vida en Colombia. Perspectivas expertas, consejos prácticos e historias reales de nuestro equipo legal.',
    featuredArticles: 'Artículos Destacados',
    featuredDescription: 'Nuestras historias más recientes e importantes',
    allArticles: 'Todos los Artículos',
    allArticlesDescription: 'Explora todos nuestros artículos y perspectivas',
    noArticles: 'No se encontraron artículos.',
    addCoverImages: 'Agregar Imágenes de Portada',
    noPosts: 'No hay publicaciones disponibles',
    loading: 'Cargando publicaciones...',
    error: 'Error al cargar publicaciones',
    newsletterTitle: 'Mantente Actualizado',
    newsletterDescription: 'Recibe las últimas perspectivas legales y actualizaciones en tu bandeja de entrada.',
    newsletterPlaceholder: 'Ingresa tu email',
    newsletterButton: 'Suscribirse',
    statsTitle: 'Nuestro Contenido',
    statsDescription: 'Descubre nuestra colección integral de perspectivas legales y recursos'
  }
};

const content = textContent[lang as keyof typeof textContent] || textContent.en;
---

<Layout title="Blog - Capital M Law" menuData={menuData} lang={lang}>
  {error ? (
    <!-- Error Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="text-red-500 mb-4">
            <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
          </div>
          <p class="text-gray-600 text-lg">{error}</p>
        </div>
      </div>
    </section>
  ) : (
    <>
      <!-- Modern Blog Hero Section -->
      <ModernBlogHero 
        posts={allPosts} 
        categories={categories} 
        lang={lang} 
        client:load
      />

      <!-- Blog Stats Section -->
      <BlogStats 
        posts={allPosts}
        categories={categories}
        lang={lang}
        client:load
      />

      <!-- Featured Posts Section -->
      {featuredPosts.length > 0 && (
        <section class="py-20 bg-gradient-to-br from-white via-blue-50/30 to-indigo-50/30">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
              <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                {content.featuredArticles}
              </h2>
              <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                {content.featuredDescription}
              </p>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
              {featuredPosts.map((post: any, index: number) => (
                <div class={`transform hover:scale-105 transition-all duration-500 delay-${index * 2}`}>
                  <BlogCard 
                    post={post} 
                    lang={lang} 
                    variant="featured"
                    client:load
                  />
                </div>
              ))}
            </div>
          </div>
        </section>
      )}

      <!-- Interactive Blog Grid Section -->
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
              {content.allArticles}
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              {content.allArticlesDescription}
            </p>
          </div>
          
          {allPosts.length > 0 ? (
            <InteractiveBlogGrid 
              posts={allPosts}
              lang={lang}
              client:load
            />
          ) : (
            <div class="text-center py-16">
              <div class="text-gray-400 text-8xl mb-6 animate-bounce">📝</div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-4">
                {content.noArticles}
              </h3>
              <p class="text-gray-600 text-lg">
                {lang === 'en' 
                  ? 'No articles available at the moment.'
                  : 'No hay artículos disponibles en este momento.'
                }
              </p>
            </div>
          )}
        </div>
      </section>

      <!-- Newsletter Section -->
      <BlogNewsletter 
        lang={lang}
        client:load
      />

      <!-- Enhanced Call to Action Section -->
      <section class="py-20 bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-700 relative overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent opacity-20"></div>
        
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-8">
            {lang === 'en' 
              ? 'Need Legal Help?'
              : '¿Necesitas ayuda legal?'
            }
          </h2>
          <p class="text-xl text-blue-100 mb-12 leading-relaxed">
            {lang === 'en' 
              ? 'Our team of legal experts is here to help you with your immigration and business needs in Colombia. Get personalized advice and support.'
              : 'Nuestro equipo de expertos legales está aquí para ayudarte con tus necesidades de inmigración y negocios en Colombia. Obtén asesoramiento personalizado y apoyo.'
            }
          </p>
          <div class="flex flex-col sm:flex-row gap-6 justify-center">
            <a 
              href={`/${lang}/contact`}
              class="inline-flex items-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-xl hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
              {lang === 'en' ? 'Contact Us' : 'Contactar'}
            </a>
            <a 
              href={`/${lang}/visas`}
              class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-xl hover:bg-white hover:text-blue-600 transition-all duration-300 transform hover:scale-105"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              {lang === 'en' ? 'View Visas' : 'Ver Visas'}
            </a>
          </div>
        </div>
      </section>
    </>
  )}
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .bg-grid-slate-100 {
    background-image: linear-gradient(to right, rgb(241 245 249) 1px, transparent 1px),
                      linear-gradient(to bottom, rgb(241 245 249) 1px, transparent 1px);
    background-size: 24px 24px;
  }

  /* Custom animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .animate-slide-in-left {
    animation: slideInLeft 0.6s ease-out forwards;
  }

  .animate-slide-in-right {
    animation: slideInRight 0.6s ease-out forwards;
  }

  /* Hover effects */
  .hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hover-lift:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  /* Gradient text */
  .gradient-text {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style> 